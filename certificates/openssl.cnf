[req]
default_bits = 2048
prompt = no
default_md = sha256
distinguished_name = dn
req_extensions = v3_req

[ v3_ca ]
basicConstraints = critical, CA:true, pathlen:2
keyUsage = critical, cRLSign, keyCertSign

[dn]
CN = *.local

[v3_req]
subjectAltName = @alt_names

[alt_names]
DNS.1 = *.intranet
DNS.2 = *.local
DNS.3 = *.cluster.local
DNS.4 = *.svc.cluster.local
DNS.5 = *.sdlc-kafka.svc.cluster.local
DNS.6 = kubernetes.default
DNS.7 = kubernetes.default.svc.cluster.local
DNS.8 = localhost
